project-root ;
import python ;


# build a list of source file, including subdirectories.
local pat = *.cpp ;
local dirs = build ;
local sourcefiles = [ glob-tree $(dirs) : $(pat) ] ;

extension ogre
    :
    #(define)BOOST_PYTHON_MAX_ARITY = 19
    $(sourcefiles)
    <template>@boost/libs/python/build/extension
    : <include>$(BOOST_PARENT_DIRECTORY)
    <include>../ocvs/ogrenew/ogremain/include
    <include>./build/
    <library-path>../ocvs/ogrenew/ogremain/lib/release
    <find-library>ogremain.lib
    <library-path>../ocvs/ogrenew/samples/common/ceguirenderer/lib
    <find-library>ogreguirenderer.lib
    <library-path>../ocvs/ogrenew/dependencies/lib/release
    <find-library>ceguibase.lib
    <find-library>ode.lib
;
